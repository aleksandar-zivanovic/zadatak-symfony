{% extends 'base.html.twig' %}

{% block title %}Administration: Users{% endblock %}

{% block body %}

    <div class="example-wrapper">
        {% for user in users %}
            <ul>
                <li>{{ user.id }}</li>
                <li>{{ user.firstName }}</li>
                <li>{{ user.lastName }}</li>
                <li>{{ user.roles.0 }}</li>
                <li>{{ user.email }}</li>
                <li>
                    {% if user.isVerified %}
                        VERIFIED
                    {% else %}
                        UNVERIFIED
                    {% endif %}
                </li>
            </ul>
        {% endfor %}
    </div>
{% endblock %}
